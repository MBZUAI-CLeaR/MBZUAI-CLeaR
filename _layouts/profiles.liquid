---
layout: page
title: People
---
<div class="post">
  <article>
    <div class="container">
      <h2>Faculty</h2>
      <hr>
      <div class="row">
        {% for person in page.faculty %}
          <div class="col-md-4">
            <img src="{{ person.image }}" alt="{{ person.name }}" style="width:100%">
            <h3>
              <a href="{{ person.link }}" target="_blank">{{ person.name }}</a>
            </h3>
            <p>{{ person.status }}</p>
          </div>
        {% endfor %}
      </div>

